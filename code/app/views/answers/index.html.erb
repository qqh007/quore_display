<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td><%= link_to 'Show', question_answer_path(answer.question_id,answer.id) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer.question_id,answer.id) %></td>
        
        <td><%= link_to 'Destroy', question_answers_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path %>
<%= link_to 'Back', question_path(params[:question_id]) %>