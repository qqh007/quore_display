<!DOCTYPE html>
<html>
  <head>
    <title>Quore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
          <div id="navbar" class="navbar-collapse collapse"></div>
          <ul class="nav navbar-nav">
              <li><%= link_to 'Home', root_path %></li>
              
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Add Question', new_question_path %></li>
              <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      My
                      <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                      <% if user_signed_in? %>
                      <li><%= link_to 'My Account',  '/users/account'%></li>
                      <li><%= link_to 'Edit Password', edit_user_registration_path %></li>
                      <li><%= link_to 'My Questions', "/users/list_questions"%></li>
                      <li><%= link_to 'Log out', destroy_user_session_path %></li>
                      <% else %>
                      <li><%= link_to 'Log in', new_user_session_path %></li>
                      <% end %>
                  </ul>
              </li>
          </ul>
      </div>
    </nav>

    <main style="margin-top: 60px;">
        <div class="container">
            <div class="row">
              <div class="col-md-12">
                <%= yield %>
              </div>
            </div>
        </div>
    </main>

    <footer >
        Copyright&nbsp;&copy;&nbsp;2020&nbsp;&nbsp;ruby homework 18373441&nbsp;
    </footer>

  </body>
</html>

